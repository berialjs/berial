{
  "name": "berial",
  "version": "0.0.0",
  "description": "micro frontend",
  "main": "dist/umd/index.js",
  "module": "dist/es/index.esm.js",
  "types": "dist/es/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "check": "run-p fmt-check lint",
    "dev": "rollup -c --watch",
    "fix": "eslint --fix **/*.ts",
    "fmt": "run-s \"fmt-check -- --write\"",
    "fmt-check": "prettier --check **/*.{md,json,ts}",
    "lint": "eslint **/*.ts",
    "serve": "serve ./demo/",
    "type": "tsc --project tsconfig.json --skipLibCheck --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berialjs/berial.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/berialjs/berial/issues"
  },
  "homepage": "https://github.com/berialjs/berial#readme",
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.3",
    "@types/jest": "^24.0.18",
    "@types/node": "^10.12.24",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^3.0.9",
    "jest": "^24.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.23.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "serve": "^11.3.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "npm run fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run type && lint-staged"
    }
  }
}
