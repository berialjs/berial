{
  "name": "berial",
  "version": "0.0.7",
  "description": "micro frontend",
  "main": "dist/berial.js",
  "module": "dist/berial.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "check": "run-p fmt-check lint",
    "fix": "run-s \"lint -- --fix\"",
    "fmt": "run-s \"fmt-check -- --write\"",
    "fmt-check": "prettier --check **/*.{md,json,ts}",
    "lint": "eslint **/*.ts",
    "test": "karma start karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berialjs/berial.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/berialjs/berial/issues"
  },
  "homepage": "https://github.com/berialjs/berial#readme",
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.3",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^10.12.24",
    "@types/sinon": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "karma": "^5.1.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-typescript": "^5.1.0",
    "mocha": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "puppeteer": "^5.2.1",
    "rollup": "^2.23.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "serve": "^11.3.2",
    "sinon": "^9.0.3",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fmt && npm run fix;"
    }
  }
}
